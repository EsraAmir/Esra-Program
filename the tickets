class Ticket:
    # Constructor method to initialize a Ticket object with provided attributes
    def __init__(self, ticket_id, event, visitor_type, price):
        # Assigning values to instance variables
        self.ticket_id = ticket_id  # Unique ID of the ticket
        self.event = event  # Event associated with the ticket
        self.visitor_type = visitor_type  # Type of visitor (e.g., adult, child) for whom the ticket is issued
        self.price = price  # Price of the ticket

    # Method to display receipt for the ticket
    def display_receipt(self):
        # Printing out the information about the ticket
        print("Ticket ID:", self.ticket_id)  # Print the ticket ID
        print("Visitor Type:", self.visitor_type)  # Print the type of visitor
        print("Price:", self.price)  # Print the price of the ticket


class Exhibition:
    # Constructor method to initialize an Exhibition object with provided attributes
    def __init__(self, title, location, duration):
        # Assigning values to instance variables
        self.title = title  # Title of the exhibition
        self.location = location  # Location of the exhibition
        self.duration = duration  # Duration of the exhibition


class Event:
    # Constructor method to initialize an Event object with provided attributes
    def __init__(self, title, location, duration, ticket_price):
        # Assigning values to instance variables
        self.title = title  # Title of the event
        self.location = location  # Location of the event
        self.duration = duration  # Duration of the event
        self.ticket_price = ticket_price  # Price of the event's ticket
